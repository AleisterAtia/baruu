<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HalamaUtama">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="Passing Buttoon"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/btnPassingButton"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Nama Hewan"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/btnListview"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Recycle View"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/btnRv"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Data Buah"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/btnBuah"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="List Movie"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/btnMovie"/>

</LinearLayout>